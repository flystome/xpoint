/* pages/share/share.wxss */
.container {
  min-height: 100vh;
  background: #D73743;
  position: relative;
  text-align: center;
}
.container .topCorner {
  position: absolute;
  top: -550rpx;
  left: -75rpx;
  width: 900rpx;
  height: 900rpx;
  background: #ea505c;
  border-radius: 450rpx;
}
.user {
  position: absolute;
  top: 280rpx;
  left: 0;
  width: 100%;
  text-align: center;
  z-index: 10;
}
.user text {
  display: block;
  color: #ffffff;
  font-size: 36rpx;
  line-height: 50rpx;
}
.photo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 2rpx solid #ffffff;
}
.content {
  padding-top: 500rpx;
  width: 100%;
}
.content text {
  font-size: 48rpx;
  line-height: 73rpx;
  color: #FFD25F;
}
.content button {
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  width: 70%;
  background: #FFD25F;
  color: #D73743;
  margin: 160rpx auto 30rpx;
}
.content .goHome {
  color: #ffffff;
  font-size: 28rpx;
  /* margin-top: 40rpx; */
}
