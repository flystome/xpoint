
.container {
  /* display: flex; */
  position: relative;
  min-height: 100vh;
  background: #ECECEC;
}
.banner {
  width: 92%;
  height: 300rpx;
  padding: 30rpx 42rpx;
  background: #373b4c;
  box-sizing: border-box;
  position: relative;
  margin-top: 32rpx;
  border-radius: 12rpx;
}
.banner view {
  display: block;
  color: #ffffff;
}
.banner .photo {
  height: 88rpx;
  display: flex;
  align-content: center;
}
.photo image {
  width: 84rpx;
  height: 84rpx;
  border-radius: 42rpx;
  border: 2rpx solid #FFFFFF;
}
.photo text {
  line-height: 88rpx;
  margin-left: 20rpx;
  font-size: 36rpx;
}
.photo view {
  display: inline-block;
  width: 84rpx;
  height: 84rpx;
  border-radius: 42rpx;
  border: 2rpx solid #FFFFFF;
  background: #F2F2F2;
}
.banner .scores {
  position: absolute;
  top: 40rpx;
  right: 0;
  width: 200rpx;
  height: 72rpx;
  background: #3BBF81;
  border-radius: 36rpx 0 0 36rpx;
  display: flex;
  align-items: center;
  text-align: center;
}
.banner .scores image {
  width: 56rpx;
  height: 56rpx;
  margin-left: 16rpx;
}
.banner .scores text {
  font-size: 28rpx;
}
.pic {
  position: absolute;
  top: 200rpx;
  right: 40rpx;
}
.banner .bindApp {
  width: 56rpx;
  height: 53rpx;
  margin-left: 20rpx;
}
.red {
  height: 70rpx;
  width: 70rpx;
  vertical-align: -9rpx;
}
.banner .bindApp1 {
  width: 44rpx;
}
.banner view text {
  font-size: 32rpx;
}
.banner .name {
  margin-top: 80rpx;
  font-size: 32rpx;
  line-height: 48rpx;
  color: #5E6A88;
}
.number {
  font-size: 54rpx;
  line-height: 66rpx;
  margin-top: 10rpx;
}
.header {
  background: #373b4c;
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  color: #ffffff;
  font-size: 36rpx;
  text-indent: 20rpx;
}
.detail {
  padding: 20rpx 0;
  width: 100%;
  box-sizing: border-box;
  flex: 1;
  margin-bottom: 48rpx;
}
.detail view.list {
  height: 200rpx;
  width: 92%;
  margin: 32rpx auto;
  font-size: 36rpx;
  color: #373b4c;
  box-sizing: border-box;
  background: #ffffff;
  border-radius: 12rpx;
}
.list .content {
  height: 136rpx;
  line-height: 136rpx;
  padding: 0 32rpx;
  font-size: 36rpx;
}
.list .content image {
  width: 80rpx;
  height: 80rpx;
  vertical-align: middle;
  margin-right: 24rpx;
}
.list .content .coin {
  color: #212A42;
  text-transform: uppercase;
}
.list .links {
  height: 64rpx;
  line-height: 64rpx;
  background: #F2F2F2;
  border-radius: 0 0 12rpx 12rpx;
  display: flex;
}

.detail .noData {
  line-height: 200rpx;
  height: 200rpx;
  text-align: center;
  color: #cccccc;
}
.detail view .points {
  float: right;
  color: #3BBF81;
}
.links view {
  float: left;
  width: 33.3%;
  color: #5E6A88;
  font-size: 24rpx;
  text-align: center;
}
.links view:first-child {
  border-right: 1px solid #F9F9F9;
}
.links view image {
  margin-right: 10rpx;
  vertical-align: middle;
}
.links view:first-child image {
  width: 28rpx;
  height: 26rpx;
  vertical-align:-2rpx;
}
.links view.goRed image {
  width: 26rpx;
  height: 28rpx;
  vertical-align:-4rpx;
}
.links view:last-child image {
  width: 36rpx;
  height: 36rpx;
  vertical-align:-7rpx;
}
