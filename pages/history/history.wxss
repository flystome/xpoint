.container {
  background: #ffffff;
}
.detail {
  box-sizing: border-box;
  padding: 10rpx 30rpx;
}
.detail .header {
  color: #373b4c;
  font-size: 36rpx;
  margin-bottom: 20rpx;
}
.detail .item {
  height: 128rpx;
  /* margin-bottom: 10rpx; */
  border-bottom: 1px solid #ECECEC;
  padding: 20rpx 0;
  box-sizing: border-box;
}
.detail .shop {
  color: #373b4c;
  font-size: 32rpx;
}
.item .hd {
  font-size: 28rpx;
  color: #b8b8b8;
  display: flex;
  height: 40rpx;
  line-height: 40rpx;
}
.item .bd {
  /* display: flex; */
  font-size: 32rpx;
  color: #373b4c;
  height: 50rpx;
  line-height: 50rpx;
}
.bd .lt {
  padding-left: 96rpx;
  height: 100%;
  float: left;
}
.bd .lt image {
  margin-left: -92rpx;
  float: left;
  width: 80rpx;
  height: 80rpx;
}
.bd .lt text {
  display: block;
}
item .title {
  font-size: 36rpx;
  line-height: 48rpx;
}
.item .time {
  font-size: 24rpx;
  line-height: 32rpx;
}
.item .status {
  width: 33%;
}
.item .points {
  color: #212A42;
  float: right;
  font-size: 36rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
}
.item .points.red {
  color: #D73743;
}