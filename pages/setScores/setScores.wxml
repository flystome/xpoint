<!--pages/setScores/setScores.wxml-->
<view class="container">
  <view class="inputs">
    <view class="coin">
      <text>选择币种</text>
      <view bindtap="chooseCoin">
        {{currency}}
      </view>
    </view>
    <view class="number">
      <text>输入金额</text>
      <view>
        <input type="number" bindinput="inputChange" :value="number" placeholder="输入金额" />
      </view>
    </view>
  </view>
  <button class="copy" bindtap="confirm">确定</button>
</view>