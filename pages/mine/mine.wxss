/* pages/mine/mine.wxss */
.container {
  /* display: flex; */
  position: relative;
  min-height: 100vh;
  background: #ECECEC;
  justify-content: flex-start;
}
.banner {
  width: 100%;
  height: 200rpx;
  padding: 50rpx 42rpx;
  background: #ffffff;
  box-sizing: border-box;
  position: relative;
  margin-top: 0;
  /* border-radius: 12rpx; */
}
.banner view {
  display: block;
  color: #000000;
}
.banner .photo {
  height: 88rpx;
  display: flex;
  align-content: center;
}
.photo image {
  width: 84rpx;
  height: 84rpx;
  border-radius: 42rpx;
  border: 2rpx solid #FFFFFF;
}
.photo text {
  line-height: 88rpx;
  margin-left: 20rpx;
  font-size: 36rpx;
}
.photo view {
  display: inline-block;
  width: 84rpx;
  height: 84rpx;
  border-radius: 42rpx;
  border: 2rpx solid #FFFFFF;
  background: #F2F2F2;
}
.action {
  margin-top: 30rpx;
  width: 100%;
  border-top: 1px solid #EAEAEA;
}
.action view {
  width: 100%;
  text-align: left;
  padding: 0 42rpx;
  height: 100rpx;
  line-height: 100rpx;
  background: #ffffff;
  color: #000000;
  border-bottom: 1px solid #EAEAEA;
}